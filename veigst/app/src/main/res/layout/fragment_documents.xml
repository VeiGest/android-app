<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/Background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_documents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/documents_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginBottom="16dp"/>

        <!-- Document Card 1 - Carta de Condução -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_doc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dashboard_document"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/document_type_license"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N.º PT123456789"
                        android:textSize="12sp"
                        android:textColor="@color/TextHintLight"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expira em: 15/08/2028"
                        android:textSize="12sp"
                        android:textColor="#11C7A5"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Válido"
                    android:textSize="12sp"
                    android:textColor="#11C7A5"
                    android:background="#2211C7A5"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Document Card 2 - Certificado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_doc_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dashboard_document"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/document_type_certificate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CQM - Mercadorias"
                        android:textSize="12sp"
                        android:textColor="@color/TextHintLight"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expira em: 22/03/2026"
                        android:textSize="12sp"
                        android:textColor="#FFA500"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próximo"
                    android:textSize="12sp"
                    android:textColor="#FFA500"
                    android:background="#22FFA500"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Document Card 3 - Seguro -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_doc_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_dashboard_document"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/document_type_insurance"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apólice N.º 987654321"
                        android:textSize="12sp"
                        android:textColor="@color/TextHintLight"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expira em: 30/12/2025"
                        android:textSize="12sp"
                        android:textColor="#11C7A5"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Válido"
                    android:textSize="12sp"
                    android:textColor="#11C7A5"
                    android:background="#2211C7A5"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

