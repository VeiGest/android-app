<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/Background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_routes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routes_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/routes_no_data"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/TextHintLight"
            android:layout_marginBottom="12dp"/>

        <!-- Route Card 1 - Ativa -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_route_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dashboard_route"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Leiria → Lisboa"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_status_active"
                        android:textSize="12sp"
                        android:textColor="#11C7A5"
                        android:background="#2211C7A5"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distância: 145 km"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 1h 45min"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: 03/12/2025 08:30"
                    android:textSize="12sp"
                    android:textColor="@color/TextHintLight"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Route Card 2 - Pendente -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_route_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dashboard_route"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lisboa → Porto"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_status_pending"
                        android:textSize="12sp"
                        android:textColor="#FFA500"
                        android:background="#22FFA500"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distância: 313 km"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 3h 15min"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: 04/12/2025 09:00"
                    android:textSize="12sp"
                    android:textColor="@color/TextHintLight"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Route Card 3 - Concluída -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_route_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dashboard_route"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Coimbra → Leiria"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_status_completed"
                        android:textSize="12sp"
                        android:textColor="#808080"
                        android:background="#22808080"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distância: 68 km"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo: 52min"
                    android:textSize="14sp"
                    android:textColor="@color/TextHintLight"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: 02/12/2025 14:20"
                    android:textSize="12sp"
                    android:textColor="@color/TextHintLight"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

