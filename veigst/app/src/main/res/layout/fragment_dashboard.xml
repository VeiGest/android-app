<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/Background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_hamburger"
                android:contentDescription="@string/navigation_drawer_open"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_veigest"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_driver"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/RememberMeText"/>

                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JoÃ£o Silva"
                    android:textSize="14sp"
                    android:textColor="?attr/TextHint"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="@string/logout"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Active Route Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_active_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_directions"
                        android:contentDescription="@string/active_routes"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_routes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/TextBoxText"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/TextHint"
                    android:alpha="0.3"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_route_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/origin_label"
                    android:textSize="12sp"
                    android:textColor="?attr/TextHint"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_route_origin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leiria, Portugal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/TextBoxText"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_route_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination_label"
                    android:textSize="12sp"
                    android:textColor="?attr/TextHint"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_route_destination_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lisboa, Portugal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/TextBoxText"
                    android:paddingBottom="12dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/distance_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_route_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="145 km"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eta_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_route_eta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h 45min"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_route_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_route_details"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/BrandPrimary"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current Vehicle Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_current_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="@string/current_vehicle"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_vehicle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/TextBoxText"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/TextHint"
                    android:alpha="0.3"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/plate_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_vehicle_plate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AA-12-BB"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/model_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_vehicle_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mercedes Actros"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/km_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_vehicle_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125.340 km"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fuel_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>

                        <TextView
                            android:id="@+id/tv_vehicle_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_vehicle_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_vehicle_details"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/BrandPrimary"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Documentation Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_documentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/TextBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:contentDescription="@string/documentation"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/documentation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/TextBoxText"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/TextHint"
                    android:alpha="0.3"
                    android:layout_marginBottom="12dp"/>

                <!-- Driver License -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_license_label"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>

                        <TextView
                            android:id="@+id/tv_license_expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expires_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_license_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/valid_label"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@android:drawable/dialog_holo_light_frame"/>
                </LinearLayout>

                <!-- Vehicle Insurance -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_insurance_label"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>

                        <TextView
                            android:id="@+id/tv_insurance_expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expires_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_insurance_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/valid_label"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@android:drawable/dialog_holo_light_frame"/>
                </LinearLayout>

                <!-- Vehicle Inspection -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_inspection_label"
                            android:textSize="14sp"
                            android:textColor="?attr/TextBoxText"/>

                        <TextView
                            android:id="@+id/tv_inspection_expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expires_label"
                            android:textSize="12sp"
                            android:textColor="?attr/TextHint"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_inspection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/valid_label"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@android:drawable/dialog_holo_light_frame"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_all_docs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all_documents"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/BrandPrimary"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/RememberMeText"
            android:paddingBottom="12dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:layout_marginBottom="16dp">

            <!-- Report Issue -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_report_issue"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="?attr/TextBox">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        android:contentDescription="@string/report_issue"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_issue"
                        android:textSize="12sp"
                        android:textColor="?attr/TextBoxText"
                        android:textAlignment="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- My Routes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_my_routes"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="?attr/TextBox">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="@string/my_routes"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_routes"
                        android:textSize="12sp"
                        android:textColor="?attr/TextBoxText"
                        android:textAlignment="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- History -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_history"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="?attr/TextBox">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:contentDescription="@string/history"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history"
                        android:textSize="12sp"
                        android:textColor="?attr/TextBoxText"
                        android:textAlignment="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="?attr/TextBox">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        android:contentDescription="@string/settings"
                        android:tint="@color/BrandPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textSize="12sp"
                        android:textColor="?attr/TextBoxText"
                        android:textAlignment="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>
    </LinearLayout>
</ScrollView>
