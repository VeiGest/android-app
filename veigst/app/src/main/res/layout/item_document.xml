<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_document"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/TextBox">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_dashboard_document"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_document_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Documento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black"/>

            <TextView
                android:id="@+id/tv_document_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textSize="12sp"
                android:textColor="@color/TextHintLight"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_document_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expira em: -"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_document_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:textColor="@color/White"
            android:background="@color/Purple"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textStyle="bold"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
